{
  "name": "knowledge-mcp",
  "version": "1.1.1",
  "description": "A shared agent knowledge system with brain-inspired memory decay, associative linking, and knowledge graph visualization â€” exposed as an MCP server.",
  "type": "module",
  "bin": {
    "knowledge-mcp": "./build/index.js"
  },
  "scripts": {
    "build:wiki": "esbuild src/graph/wiki/index.ts --bundle --format=esm --outfile=src/graph/static/wiki-app.js --target=es2022",
    "build": "npm run build:wiki && tsc && rm -rf build/graph/static && cp -r src/graph/static build/graph/static && chmod 755 build/index.js",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "build",
    "!build/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cristinecula/knowledge-mcp.git"
  },
  "homepage": "https://github.com/cristinecula/knowledge-mcp#readme",
  "bugs": {
    "url": "https://github.com/cristinecula/knowledge-mcp/issues"
  },
  "keywords": [
    "mcp",
    "knowledge",
    "agent",
    "memory",
    "knowledge-graph"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@neovici/cosmoz-router": "^11.3.0",
    "@pionjs/pion": "^2.12.0",
    "better-sqlite3": "^12.6.2",
    "gray-matter": "^4.0.3",
    "lit-html": "^3.3.2",
    "marked": "^15.0.12",
    "zod": "^3.25.0"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.6.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
